{% extends "base.html.twig" %}

{% block body %}
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 col-lg6 col-xl-4">
				<div class="card">
					<div class="card-header d-flex justify-content-between align-items-center">
						<h1 class="h4">Liste des compétences</h1>
					</div>

					<a
						href="{{ path("create") }}" class="btn btn-primary "> <i class= "fas fa-plus"></i></a> 
					</a>

					<table class="table table-striped table-hovered mb-0">
						<thead>
							<tr>
								<th class="text-center">Id</th>
								<th class="text-center">Nom</th>
								<th class="text-center">Niveau</th>
								<th class="text-center">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for skill in skills %}
								<tr>
									<td class="text-center align-middle">{{ skill.id }}</td>
									<td class="text-center align-middle">{{ skill.name }}</td>
									<td class="text-center align-middle">{{ skill.level }}/10</td>
									<td class="text-center align-middle">
										<a href="{{ path('update', {'id':skill.id}) }}" class="btn btn-warning">Mettre à jour
											{# <i class= "fas fa-edit"></i> #}
										</a>
										<a href="{{ path('delete', {'id':skill.id}) }}" class="btn btn-danger">Supprimer
											{# <i class= "fas fa-trash"></i> #}
										</a>

									</td>
								</tr>
							{% else %}
                            <tr>
                                <td colspan="4" class="text-center align-middle">Aucune compétence</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}